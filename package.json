{
  "name": "@gen-tech/scroll-manager",
  "version": "0.0.0",
  "description": "Improved Scroll Events & Scroll Management",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "homepage": "https://gen-tech.github.io/scroll-manager",
  "scripts": {
    "prepare": "tsc",
    "document": "typedoc --out docs --excludeNotExported --excludePrivate --disableOutputCheck --gitRevision master",
    "test": "jest",
    "cover": "nyc report --temp-directory=coverage --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gen-tech/scroll-manager.git"
  },
  "keywords": [
    "browser",
    "scroll",
    "manager",
    "events",
    "observer",
    "observable"
  ],
  "author": "alisahinozcelik@gmail.com",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/gen-tech/scroll-manager/issues"
  },
  "dependencies": {
    "platform": "^1.3.5",
    "rxjs": "^6.1.0",
    "smoothscroll-polyfill": "^0.4.3",
    "tslib": "^1.9.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/platform": "^1.3.1",
    "coveralls": "^3.0.1",
    "jest": "^22.4.3",
    "nyc": "^11.7.3",
    "ts-jest": "^22.4.6",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.3",
    "update-json": "^1.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "html"
    ],
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "node"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "directories": {
    "doc": "docs"
  }
}
